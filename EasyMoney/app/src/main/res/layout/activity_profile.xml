<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="#9E9E9E">

    <Button
        android:id="@+id/userProfileFoot"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_marginTop="101dp"
        android:backgroundTint="#FFFFFF"
        app:icon="@drawable/ic_userinactive"
        app:iconGravity="top"
        app:iconTint="#676767"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bEProfileFoot"
        app:layout_constraintTop_toBottomOf="@+id/profileLogOutcard" />

    <Button
        android:id="@+id/bEProfileFoot"
        android:layout_width="102dp"
        android:layout_height="64dp"
        android:layout_marginTop="101dp"
        android:backgroundTint="#FFFFFF"
        app:icon="@drawable/ic_bigexpenseinactive"
        app:iconGravity="top"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reportProfileFoot"
        app:layout_constraintTop_toBottomOf="@+id/profileLogOutcard"
        tools:iconTint="#676767" />

    <Button
        android:id="@+id/reportProfileFoot"
        android:layout_width="102dp"
        android:layout_height="64dp"
        android:layout_marginTop="101dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        app:icon="@drawable/ic_reportincactive"
        app:iconGravity="top"
        app:iconTint="#676767"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trackerProfileFoot"
        app:layout_constraintTop_toBottomOf="@+id/profileLogOutcard" />

    <Button
        android:id="@+id/trackerProfileFoot"
        android:layout_width="102dp"
        android:layout_height="64dp"
        android:layout_marginTop="101dp"
        android:backgroundTint="#FFFFFF"
        app:icon="@drawable/ic_trackerinactive"
        app:iconGravity="top"
        app:iconTint="#676767"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileLogOutcard" />

    <TextView
        android:id="@+id/profileHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:text="@string/profileHeader"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/helpProfileBtn"
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        android:outlineProvider="none"
        app:icon="@drawable/ic_help"
        app:iconTint="#676767"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:iconGravity="top" />

    <TextView
        android:id="@+id/profileNametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="328dp"
        android:text="Sohee Kim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileHeader" />

    <TextView
        android:id="@+id/profileEmailtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="238dp"
        android:text="bernardoasc@gmail.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileNametxt" />

    <Button
        android:id="@+id/editProfileBtn"
        android:layout_width="92dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="303dp"
        android:background="#00FFFFFF"
        android:outlineProvider="bounds"
        android:text="@string/editProfileBtn"
        android:textColor="#676767"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileEmailtxt" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileFinanceInfocard"
        android:layout_width="382dp"
        android:layout_height="155dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfileBtn">

        <TextView
            android:id="@+id/profileFinanceInfotxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="234dp"
            android:text="Financial Information"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/profileEditIncomebtn"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="25dp"
            android:background="#00FFFFFF"
            app:icon="@drawable/ic_iconedit"
            app:iconGravity="top"
            app:iconTint="#676767"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileMonthOutputtxt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profileMonthOutputtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="56dp"
            android:text="$4,500"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/profileMonthIncometxt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profileSavingOutputtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="151dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="35dp"
            android:text="$4,500"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileSavingtxt"
            app:layout_constraintTop_toBottomOf="@+id/profileMonthOutputtxt" />

        <Button
            android:id="@+id/profileEditSavingbtn"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="28dp"
            android:background="#00FFFFFF"
            app:icon="@drawable/ic_iconedit"
            app:iconGravity="top"
            app:iconTint="#676767"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileSavingOutputtxt"
            app:layout_constraintTop_toBottomOf="@+id/profileEditIncomebtn" />

        <TextView
            android:id="@+id/profileMonthIncometxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="22dp"
            android:text="Monthly Income"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileFinanceInfotxt" />

        <TextView
            android:id="@+id/profileSavingtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="32dp"
            android:text="Current Savings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileMonthIncometxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileRecBillcard"
        android:layout_width="382dp"
        android:layout_height="47dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileFinanceInfocard">

        <TextView
            android:id="@+id/profileRecurringtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:text="Recurring Bills"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/profileGoRecurringBtn"
            android:layout_width="46dp"
            android:layout_height="43dp"
            android:layout_marginStart="196dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="2dp"
            android:background="#00FFFFFF"
            app:icon="@drawable/ic_btn_foward"
            app:iconGravity="top"
            app:iconTint="#676767"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileRecurringtxt"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileExpenseGoalcard"
        android:layout_width="382dp"
        android:layout_height="47dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileRecBillcard">

        <Button
            android:id="@+id/profileGoGoalBtn"
            android:layout_width="46dp"
            android:layout_height="43dp"
            android:layout_marginStart="201dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="2dp"
            android:background="#00FFFFFF"
            app:icon="@drawable/ic_btn_foward"
            app:iconGravity="top"
            app:iconTint="#676767"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileGoaltxt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profileGoaltxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:text="Expense Goal"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileLogOutcard"
        android:layout_width="382dp"
        android:layout_height="47dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="11dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileExpenseGoalcard">

        <Button
            android:id="@+id/profileLogOutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="277dp"
            android:background="#00FFFFFF"
            android:text="Log out"
            android:textColor="#020101"
            android:textSize="12sp"
            android:translationX="-4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>